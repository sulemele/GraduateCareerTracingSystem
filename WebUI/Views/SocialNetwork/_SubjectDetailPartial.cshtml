@using static WebUI.Controllers.SocialNetworkController
@model RoomSubjectDetailViewModel

<div class="subject-detail">
    <div class="subject-header mb-4">
        <h4 class="fw-bold text-primary">@Model.Title</h4>
        <p class="text-muted">@Model.Description</p>
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            This discussion cannot be deleted. You can only edit your own comments.
        </div>
    </div>

    <div class="comments-section">
        <h6 class="fw-bold mb-3">Comments (@Model.Comments.Count)</h6>
        <div id="commentsContainer" class="mb-4">
            @if (Model.Comments.Any())
            {
                foreach (var comment in Model.Comments)
                {
                    <div class="comment-bubble @(comment.IsCurrentUser ? "current-user" : "")">
                        <div class="comment-sender">@comment.Sender</div>
                        <div class="comment-text">@comment.Comment</div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="comment-time">@comment.CreatedDate.ToString("MMM dd, yyyy HH:mm")</span>
                            @if (comment.IsCurrentUser)
                            {
                                <button class="btn btn-sm edit-btn edit-comment-btn"
                                        data-comment-id="@comment.Id"
                                        data-comment="@comment.Comment">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                            }
                        </div>
                        @if (comment.IsCurrentUser)
                        {
                            <span class="badge">You</span>
                        }
                    </div>
                }
            }
            else
            {
                <div class="text-center py-4 text-muted">
                    <i class="bi bi-chat-left" style="font-size: 2rem;"></i>
                    <p class="mt-2">No comments yet. Be the first to comment!</p>
                </div>
            }
        </div>

        <form id="addCommentForm" data-subject-id="@Model.Id">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="newComment" class="form-label">Add a comment</label>
                <textarea class="form-control" id="newComment" rows="3"
                          placeholder="Type your comment here..." maxlength="500" required></textarea>
                <div class="form-text">500 characters maximum</div>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-send me-2"></i>Post Comment
                </button>
            </div>
        </form>
    </div>
</div>
@{
    ViewData["Title"] = "Programme Management";
    ViewData["ActivePage"] = "Programmes";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="page-title">
                    <i class="fas fa-graduation-cap text-primary me-2"></i>Programme Management
                </h1>
                <p class="page-subtitle">Manage academic programmes and their details</p>
            </div>
            <div class="col-auto">
                <button class="btn btn-primary" id="btnAddProgramme">
                    <i class="fas fa-plus me-2"></i>Add New Programme
                </button>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card stat-card-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Total Programmes</h6>
                            <h3 class="text-white mb-0" id="totalProgrammes">0</h3>
                        </div>
                        <div class="icon-circle">
                            <i class="fas fa-graduation-cap fa-2x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card stat-card-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Active</h6>
                            <h3 class="text-white mb-0">--</h3>
                        </div>
                        <div class="icon-circle">
                            <i class="fas fa-check-circle fa-2x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card stat-card-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Departments</h6>
                            <h3 class="text-white mb-0">--</h3>
                        </div>
                        <div class="icon-circle">
                            <i class="fas fa-building fa-2x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card stat-card-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Latest Update</h6>
                            <h6 class="text-white mb-0" id="latestUpdate">--</h6>
                        </div>
                        <div class="icon-circle">
                            <i class="fas fa-history fa-2x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Card -->
    <div class="card shadow-soft">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>Programme List
                    </h5>
                </div>
                <div class="col-auto">
                    <div class="input-group input-group-sm" style="width: 300px;">
                        <input type="text" class="form-control" placeholder="Search programmes..." id="searchProgramme">
                        <button class="btn btn-outline-secondary" type="button" id="btnSearch">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="programmesTable">
                    <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th width="25%">Title</th>
                            <th width="40%">Description</th>
                            <th width="15%">Created Date</th>
                            <th width="15%">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="programmesTableBody">
                        <tr id="loadingRow">
                            <td colspan="5" class="text-center py-5">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p class="mt-2">Loading programmes...</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Empty State -->
            <div id="emptyState" class="text-center py-5" style="display: none;">
                <div class="empty-state-icon mb-3">
                    <i class="fas fa-graduation-cap fa-4x text-muted"></i>
                </div>
                <h4 class="text-muted">No Programmes Found</h4>
                <p class="text-muted">Get started by adding your first programme.</p>
                <button class="btn btn-primary mt-3" id="btnAddFirstProgramme">
                    <i class="fas fa-plus me-2"></i>Add First Programme
                </button>
            </div>

            <!-- Pagination -->
            <div class="d-flex justify-content-between align-items-center mt-3" id="paginationContainer" style="display: none;">
                <div class="text-muted" id="paginationInfo">
                    Showing <span id="startRecord">0</span> to <span id="endRecord">0</span> of <span id="totalRecords">0</span> entries
                </div>
                <nav aria-label="Programme pagination">
                    <ul class="pagination pagination-sm mb-0" id="pagination"></ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Programme Modal -->
<div class="modal fade" id="programmeModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Add New Programme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="programmeForm" novalidate>
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" id="programmeId" name="Id">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="title" class="form-label required">Title</label>
                            <input type="text" class="form-control" id="title" name="Title"
                                   placeholder="Enter programme title" required maxlength="200">
                            <div class="invalid-feedback">
                                Please enter a valid title (3-200 characters).
                            </div>
                            <div class="form-text">
                                The official name of the academic programme (e.g., "Computer Science", "Business Administration")
                            </div>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="description" class="form-label required">Description</label>
                            <textarea class="form-control" id="description" name="Description"
                                      rows="4" placeholder="Enter programme description" required maxlength="1000"></textarea>
                            <div class="invalid-feedback">
                                Please enter a description (max 1000 characters).
                            </div>
                            <div class="form-text">
                                Provide a detailed description of the programme, including objectives and career opportunities.
                            </div>
                        </div>

                        <!-- Preview Section -->
                        <div class="col-md-12">
                            <div class="card preview-card">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        <i class="fas fa-eye me-2"></i>Preview
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <h5 id="previewTitle" class="text-muted">Programme Title</h5>
                                    <p id="previewDescription" class="text-muted mb-0">
                                        Programme description will appear here...
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-primary" id="btnSubmit">
                        <i class="fas fa-save me-2"></i>
                        <span id="submitText">Save Programme</span>
                        <span class="spinner-border spinner-border-sm d-none" id="submitSpinner"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-3">
                    <i class="fas fa-trash-alt fa-4x text-danger"></i>
                </div>
                <h5 class="mb-3">Are you sure you want to delete this programme?</h5>
                <p class="text-muted mb-0" id="deleteProgrammeName">This action cannot be undone.</p>
                <div class="alert alert-warning mt-3" id="deleteWarning" style="display: none;">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <span id="warningMessage"></span>
                </div>
            </div>
            <div class="modal-footer border-0 justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-danger" id="btnConfirmDelete">
                    <i class="fas fa-trash me-2"></i>Delete Programme
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Programme Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-info-circle me-2"></i>Programme Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-4">
                            <h4 id="detailsTitle" class="text-primary mb-2"></h4>
                            <p id="detailsDescription" class="mb-0"></p>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">
                                            <i class="fas fa-calendar-plus me-2"></i>Created
                                        </h6>
                                        <p class="card-text" id="detailsCreatedAt"></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">
                                            <i class="fas fa-calendar-check me-2"></i>Last Updated
                                        </h6>
                                        <p class="card-text" id="detailsUpdatedAt"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Close
                </button>
                <button type="button" class="btn btn-primary" id="btnEditFromDetails">
                    <i class="fas fa-edit me-2"></i>Edit Programme
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .required:after {
        content: " *";
        color: #dc3545;
    }

    .preview-card {
        background-color: #f8f9fa;
        border: 1px dashed #dee2e6;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

        .action-buttons .btn {
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
        }

    .empty-state-icon {
        opacity: 0.5;
    }

    .programme-title {
        font-weight: 600;
        color: #2c3e50;
        cursor: pointer;
        transition: color 0.2s;
    }

        .programme-title:hover {
            color: #3498db;
            text-decoration: underline;
        }

    .description-truncate {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .modal-content {
        border: none;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        border-radius: 0.75rem;
    }
</style>

@section Scripts {
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Global variables
        let programmesData = [];
        let currentProgrammeId = null;
        let currentPage = 1;
        const itemsPerPage = 10;
        let filteredData = [];

        $(document).ready(function() {
            // Load programmes on page load
            loadProgrammes();

            // Event Listeners
            $('#btnAddProgramme, #btnAddFirstProgramme').click(openCreateModal);
            $('#searchProgramme').on('keyup', filterProgrammes);
            $('#btnSearch').click(filterProgrammes);

            // Live preview in modal
            $('#title, #description').on('input', updatePreview);

            // Form submission
            $('#programmeForm').submit(handleFormSubmit);

            // Delete confirmation
            $('#btnConfirmDelete').click(confirmDelete);

            // Edit from details modal
            $('#btnEditFromDetails').click(editFromDetails);

            // Show toast notification function
            window.showToast = function(message, type = 'success') {
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.addEventListener('mouseenter', Swal.stopTimer);
                        toast.addEventListener('mouseleave', Swal.resumeTimer);
                    }
                });

                Toast.fire({
                    icon: type,
                    title: message
                });
            };
        });

        // Load programmes from server
        function loadProgrammes() {
            showLoading();
            $.ajax({
                url: '@Url.Action("GetProgrammes", "Programme")',
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        programmesData = response.data;
                        filteredData = [...programmesData];
                        updateStatistics();
                        renderProgrammesTable();
                        setupPagination();
                    } else {
                        showError('Failed to load programmes: ' + response.message);
                    }
                },
                error: function(xhr, status, error) {
                    showError('Error loading programmes: ' + error);
                },
                complete: function() {
                    hideLoading();
                }
            });
        }

        // Update statistics
        function updateStatistics() {
            $('#totalProgrammes').text(programmesData.length);

            if (programmesData.length > 0) {
                const latest = programmesData[0];
                $('#latestUpdate').text(formatDate(latest.UpdatedAt));
            }
        }

        // Render programmes table
        function renderProgrammesTable() {
            const tbody = $('#programmesTableBody');
            tbody.empty();

            if (filteredData.length === 0) {
                $('#emptyState').show();
                $('#paginationContainer').hide();
                return;
            }

            $('#emptyState').hide();
            $('#paginationContainer').show();

            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = Math.min(startIndex + itemsPerPage, filteredData.length);
            const pageData = filteredData.slice(startIndex, endIndex);
          

            pageData.forEach((programme, index) => {
                const rowNumber = startIndex + index + 1;
                const row = `
                    <tr>
                        <td>${rowNumber}</td>
                        <td>
                            <div class="programme-title" onclick="showDetails('${programme.id}')">
                                ${programme.title}
                            </div>
                        </td>
                        <td>
                            <div class="description-truncate" title="${programme.description}">
                                ${programme.description}
                            </div>
                        </td>
                        <td>
                            <span class="badge bg-light text-dark">
                                <i class="fas fa-calendar me-1"></i>
                                ${formatDate(programme.createdAt)}
                            </span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-outline-primary"
                                        onclick="showDetails('${programme.id}')"
                                        title="View Details">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-success"
                                        onclick="openEditModal('${programme.id}')"
                                        title="Edit Programme">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger"
                                        onclick="confirmDeleteModal('${programme.id}', '${programme.title}')"
                                        title="Delete Programme">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });

            // Update pagination info
            $('#startRecord').text(startIndex + 1);
            $('#endRecord').text(endIndex);
            $('#totalRecords').text(filteredData.length);
        }

        // Setup pagination
        function setupPagination() {
            const totalPages = Math.ceil(filteredData.length / itemsPerPage);
            const pagination = $('#pagination');
            pagination.empty();

            if (totalPages <= 1) return;

            // Previous button
            const prevDisabled = currentPage === 1 ? 'disabled' : '';
            pagination.append(`
                <li class="page-item ${prevDisabled}">
                    <a class="page-link" href="#" onclick="changePage(${currentPage - 1})">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
            `);

            // Page numbers
            for (let i = 1; i <= totalPages; i++) {
                const active = i === currentPage ? 'active' : '';
                pagination.append(`
                    <li class="page-item ${active}">
                        <a class="page-link" href="#" onclick="changePage(${i})">${i}</a>
                    </li>
                `);
            }

            // Next button
            const nextDisabled = currentPage === totalPages ? 'disabled' : '';
            pagination.append(`
                <li class="page-item ${nextDisabled}">
                    <a class="page-link" href="#" onclick="changePage(${currentPage + 1})">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            `);
        }

        // Change page
        function changePage(page) {
            currentPage = page;
            renderProgrammesTable();
            setupPagination();
        }

        // Filter programmes
        function filterProgrammes() {
            const searchTerm = $('#searchProgramme').val().toLowerCase();

            if (!searchTerm) {
                filteredData = [...programmesData];
            } else {
                filteredData = programmesData.filter(programme =>
                    programme.Title.toLowerCase().includes(searchTerm) ||
                    programme.Description.toLowerCase().includes(searchTerm)
                );
            }

            currentPage = 1;
            renderProgrammesTable();
            setupPagination();
        }

        // Open create modal
        function openCreateModal() {
            $('#modalTitle').text('Add New Programme');
            $('#submitText').text('Save Programme');
            $('#programmeId').val('');
            $('#title').val('');
            $('#description').val('');

            // Reset validation
            $('#programmeForm').removeClass('was-validated');
            $('.invalid-feedback').hide();
            $('.is-invalid').removeClass('is-invalid');

            updatePreview();

            const modal = new bootstrap.Modal(document.getElementById('programmeModal'));
            modal.show();
        }

        // Open edit modal
        function openEditModal(id) {
            showLoading();
            $.ajax({
                url: '@Url.Action("GetProgramme", "Programme")' + '/' + id,
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        const programme = response.data;

                        $('#modalTitle').text('Edit Programme');
                        $('#submitText').text('Update Programme');
                        $('#programmeId').val(programme.id);
                        $('#title').val(programme.title);
                        $('#description').val(programme.description);

                        // Reset validation
                        $('#programmeForm').removeClass('was-validated');
                        $('.invalid-feedback').hide();
                        $('.is-invalid').removeClass('is-invalid');

                        updatePreview();

                        const modal = new bootstrap.Modal(document.getElementById('programmeModal'));
                        modal.show();
                    } else {
                        showError('Failed to load programme details: ' + response.message);
                    }
                },
                error: function(xhr, status, error) {
                    showError('Error loading programme: ' + error);
                },
                complete: function() {
                    hideLoading();
                }
            });
        }

        // Show details modal
        function showDetails(id) {
            showLoading();
            $.ajax({
                url: '@Url.Action("GetProgramme", "Programme")' + '/' + id,
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        const programme = response.data;

                        $('#detailsTitle').text(programme.title);
                        $('#detailsDescription').text(programme.description);
                        $('#detailsCreatedAt').text(formatDateTime(programme.createdAt));
                        $('#detailsUpdatedAt').text(formatDateTime(programme.updatedAt));

                        // Store current programme ID
                        currentProgrammeId = programme.id;

                        const modal = new bootstrap.Modal(document.getElementById('detailsModal'));
                        modal.show();
                    } else {
                        showError('Failed to load programme details: ' + response.message);
                    }
                },
                error: function(xhr, status, error) {
                    showError('Error loading programme details: ' + error);
                },
                complete: function() {
                    hideLoading();
                }
            });
        }

        // Edit from details modal
        function editFromDetails() {
            $('#detailsModal').modal('hide');
            setTimeout(() => {
                openEditModal(currentProgrammeId);
            }, 300);
        }

        // Update preview in modal
        function updatePreview() {
            const title = $('#title').val() || 'Programme Title';
            const description = $('#description').val() || 'Programme description will appear here...';

            $('#previewTitle').text(title);
            $('#previewDescription').text(description);
        }

        // Handle form submission
        function handleFormSubmit(e) {
            e.preventDefault();
            e.stopPropagation();

            const form = $(this)[0];
            if (!form.checkValidity()) {
                $(this).addClass('was-validated');
                return;
            }

            const programmeId = $('#programmeId').val();
            const isEdit = !!programmeId;

            const formData = {
                Title: $('#title').val(),
                Description: $('#description').val()
            };

            // Get anti-forgery token
            const token = $('input[name="__RequestVerificationToken"]').val();

            // Show loading state
            $('#btnSubmit').prop('disabled', true);
            $('#submitSpinner').removeClass('d-none');

            // Determine endpoint and method
            const url = isEdit ? '@Url.Action("Edit", "Programme")' + '/' + programmeId : '@Url.Action("Create", "Programme")';
            const method = 'POST';

            $.ajax({
                url: url,
                type: method,
                contentType: 'application/json',
                headers: {
                    'RequestVerificationToken': token
                },
                data: JSON.stringify(formData),
                success: function(response) {
                    if (response.success) {
                        $('#programmeModal').modal('hide');
                        showToast(isEdit ? 'Programme updated successfully!' : 'Programme created successfully!');

                        // Refresh the data
                        loadProgrammes();

                        // Reset form
                        $('#programmeForm')[0].reset();
                        $('#programmeForm').removeClass('was-validated');
                    } else {
                        // Handle validation errors
                        if (response.errors && response.errors.length > 0) {
                            response.errors.forEach(error => {
                                showError(error);
                            });
                        } else {
                            showError(response.message || 'Operation failed');
                        }
                    }
                },
                error: function(xhr, status, error) {
                    if (xhr.status === 400 && xhr.responseJSON) {
                        const errorData = xhr.responseJSON;
                        if (errorData.errors) {
                            // Display validation errors
                            Object.keys(errorData.errors).forEach(field => {
                                const errorMessages = errorData.errors[field];
                                errorMessages.forEach(message => {
                                    showError(`${field}: ${message}`);
                                });
                            });
                        } else {
                            showError(errorData.message || 'Validation failed');
                        }
                    } else {
                        showError('Error: ' + error);
                    }
                },
                complete: function() {
                    $('#btnSubmit').prop('disabled', false);
                    $('#submitSpinner').addClass('d-none');
                }
            });
        }

        // Confirm delete modal
        function confirmDeleteModal(id, title) {
            currentProgrammeId = id;
            $('#deleteProgrammeName').html(`You are about to delete <strong>"${title}"</strong>. This action cannot be undone.`);

            // Check if programme has departments
            $.ajax({
                url: '@Url.Action("CheckDependencies", "Programme")' + '/' + id,
                type: 'GET',
                success: function(response) {
                    if (response.hasDependencies) {
                        $('#deleteWarning').show();
                        $('#warningMessage').text(response.message);
                        $('#btnConfirmDelete').prop('disabled', true);
                    } else {
                        $('#deleteWarning').hide();
                        $('#btnConfirmDelete').prop('disabled', false);
                    }
                },
                error: function() {
                    $('#deleteWarning').hide();
                    $('#btnConfirmDelete').prop('disabled', false);
                }
            });

            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Confirm delete action
        function confirmDelete() {
            $('#btnConfirmDelete').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Deleting...');

            // Get anti-forgery token
            const token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: '@Url.Action("Delete", "Programme")' + '/' + currentProgrammeId,
                type: 'POST',
                headers: {
                    'RequestVerificationToken': token
                },
                success: function(response) {
                    $('#deleteModal').modal('hide');

                    if (response.success) {
                        showToast('Programme deleted successfully!');
                        loadProgrammes();
                    } else {
                        showError(response.message || 'Failed to delete programme');
                    }
                },
                error: function(xhr, status, error) {
                    showError('Error deleting programme: ' + error);
                },
                complete: function() {
                    $('#btnConfirmDelete').prop('disabled', false).html('<i class="fas fa-trash me-2"></i>Delete Programme');
                }
            });
        }

        // Utility functions
        function formatDate(dateString) {
            if (!dateString) return 'N/A';
            try {
                const date = new Date(dateString);
                return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
            } catch {
                return dateString;
            }
        }

        function formatDateTime(dateString) {
            if (!dateString) return 'N/A';
            try {
                const date = new Date(dateString);
                return date.toLocaleString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
            } catch {
                return dateString;
            }
        }

        function showError(message) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: message,
                confirmButtonColor: '#dc3545'
            });
        }

        function showLoading() {
            $('#loadingOverlay').show();
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }
    </script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Global variables
        let programmesData = [];
        let currentProgrammeId = null;
        let currentPage = 1;
        const itemsPerPage = 10;
        let filteredData = [];

        $(document).ready(function() {
            // Load programmes on page load
            loadProgrammes();

            // Event Listeners
            $('#btnAddProgramme, #btnAddFirstProgramme').click(openCreateModal);
            $('#searchProgramme').on('keyup', filterProgrammes);
            $('#btnSearch').click(filterProgrammes);

            // Live preview in modal
            $('#title, #description').on('input', updatePreview);

            // Form submission
            $('#programmeForm').submit(handleFormSubmit);

            // Delete confirmation
            $('#btnConfirmDelete').click(confirmDelete);

            // Edit from details modal
            $('#btnEditFromDetails').click(editFromDetails);

            // Quick view actions
            $(document).on('click', '#btnQuickEdit', quickEdit);
            $(document).on('click', '#btnQuickDelete', quickDelete);
            $(document).on('click', '#btnQuickDetails', quickDetails);

            // Show toast notification function
            window.showToast = function(message, type = 'success') {
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.addEventListener('mouseenter', Swal.stopTimer);
                        toast.addEventListener('mouseleave', Swal.resumeTimer);
                    }
                });

                Toast.fire({
                    icon: type,
                    title: message
                });
            };
        });

        // Load programmes from API
        function loadProgrammes() {
            showLoading();
            $.ajax({
                url: '/Programme/GetProgrammes',
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        programmesData = response.data;
                        filteredData = [...programmesData];
                        updateStatistics();
                        renderProgrammesTable();
                        setupPagination();
                    } else {
                        showError('Failed to load programmes');
                    }
                },
                error: function(xhr, status, error) {
                    showError('Error loading programmes: ' + error);
                },
                complete: function() {
                    hideLoading();
                }
            });
        }

        // Update statistics
        function updateStatistics() {
            $('#totalProgrammes').text(programmesData.length);

            if (programmesData.length > 0) {
                const latest = programmesData[0];
                $('#latestUpdate').text(formatDate(latest.UpdatedAt));
            }
        }

        // Render programmes table
        function renderProgrammesTable() {
            const tbody = $('#programmesTableBody');
            tbody.empty();

            if (filteredData.length === 0) {
                $('#emptyState').show();
                $('#paginationContainer').hide();
                return;
            }

            $('#emptyState').hide();
            $('#paginationContainer').show();

            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = Math.min(startIndex + itemsPerPage, filteredData.length);
            const pageData = filteredData.slice(startIndex, endIndex);

            pageData.forEach((programme, index) => {
                const rowNumber = startIndex + index + 1;
                const row = `
                    <tr>
                        <td>${rowNumber}</td>
                        <td>
                            <div class="programme-title" onclick="showQuickView('${programme.Id}')">
                                ${programme.Title}
                            </div>
                        </td>
                        <td>
                            <div class="description-truncate" title="${programme.Description}">
                                ${programme.Description}
                            </div>
                        </td>
                        <td>
                            <span class="badge bg-light text-dark">
                                <i class="fas fa-calendar me-1"></i>
                                ${formatDate(programme.CreatedAt)}
                            </span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-outline-primary"
                                        onclick="showDetails('${programme.Id}')"
                                        title="View Details">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-success"
                                        onclick="openEditModal('${programme.Id}')"
                                        title="Edit Programme">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger"
                                        onclick="confirmDeleteModal('${programme.Id}', '${programme.Title}')"
                                        title="Delete Programme">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });

            // Update pagination info
            $('#startRecord').text(startIndex + 1);
            $('#endRecord').text(endIndex);
            $('#totalRecords').text(filteredData.length);
        }

        // Setup pagination
        function setupPagination() {
            const totalPages = Math.ceil(filteredData.length / itemsPerPage);
            const pagination = $('#pagination');
            pagination.empty();

            if (totalPages <= 1) return;

            // Previous button
            const prevDisabled = currentPage === 1 ? 'disabled' : '';
            pagination.append(`
                <li class="page-item ${prevDisabled}">
                    <a class="page-link" href="#" onclick="changePage(${currentPage - 1})">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
            `);

            // Page numbers
            for (let i = 1; i <= totalPages; i++) {
                const active = i === currentPage ? 'active' : '';
                pagination.append(`
                    <li class="page-item ${active}">
                        <a class="page-link" href="#" onclick="changePage(${i})">${i}</a>
                    </li>
                `);
            }

            // Next button
            const nextDisabled = currentPage === totalPages ? 'disabled' : '';
            pagination.append(`
                <li class="page-item ${nextDisabled}">
                    <a class="page-link" href="#" onclick="changePage(${currentPage + 1})">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            `);
        }

        // Change page
        function changePage(page) {
            currentPage = page;
            renderProgrammesTable();
            setupPagination();
        }

        // Filter programmes
        function filterProgrammes() {
            const searchTerm = $('#searchProgramme').val().toLowerCase();

            if (!searchTerm) {
                filteredData = [...programmesData];
            } else {
                filteredData = programmesData.filter(programme =>
                    programme.Title.toLowerCase().includes(searchTerm) ||
                    programme.Description.toLowerCase().includes(searchTerm)
                );
            }

            currentPage = 1;
            renderProgrammesTable();
            setupPagination();
        }

        // Open create modal

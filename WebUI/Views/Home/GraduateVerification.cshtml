
@model WebUI.DTOs.GraduateProfileDTO
@{
    ViewData["Title"] = "Graduate Verification";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold text-primary mb-3">
                    <i class="fas fa-user-graduate me-2"></i>Graduate Verification
                </h1>
                <p class="lead text-muted">Enter a graduate Matric Number to verify credentials and view profile</p>
            </div>

            <!-- Search Box -->
            <div class="card shadow-lg border-0 mb-5">
                <div class="card-body p-4">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-primary text-white">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" id="graduateId" class="form-control"
                               placeholder="Enter Graduate Matric Number (e.g., CS/2018/001)"
                               aria-label="Graduate ID">
                        <button class="btn btn-primary px-4" id="searchBtn" type="button">
                            <i class="fas fa-search me-2"></i>Verify
                        </button>
                    </div>
                    <div class="form-text mt-2 text-muted">
                        <i class="fas fa-info-circle me-1"></i>Enter the unique Matric Number provided
                    </div>
                </div>
            </div>

            <!-- Loading Spinner -->
            <div id="loadingSpinner" class="text-center d-none">
                <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3 text-muted">Verifying graduate credentials...</p>
            </div>

            <!-- Error Alert -->
            <div id="errorAlert" class="alert alert-danger d-none" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <span id="errorMessage"></span>
            </div>

            <!-- Graduate Profile Card -->
            <div id="graduateProfile" class="d-none">
                <div class="card shadow-lg border-0 mb-4">
                    <div class="card-header bg-primary text-white py-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="h4 mb-0">
                                <i class="fas fa-user-graduate me-2"></i>Graduate Profile
                            </h3>
                            <span class="badge bg-light text-primary fs-6">
                                <i class="fas fa-check-circle me-1"></i>Verified
                            </span>
                        </div>
                    </div>

                    <div class="card-body p-0">
                        <!-- Profile Header -->
                        <div class="row g-0 bg-light p-4 border-bottom">
                            <div class="col-auto">
                                <div id="profileImage" class="rounded-circle border border-4 border-white shadow"
                                     style="width: 120px; height: 120px; background-color: #e9ecef; background-size: cover; background-position: center;">
                                    <div class="w-100 h-100 d-flex align-items-center justify-content-center text-muted">
                                        <i class="fas fa-user fa-3x"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col ps-4 d-flex align-items-center">
                                <div>
                                    <h2 id="graduateName" class="h3 mb-2">John Doe</h2>
                                    <div class="row g-3">
                                        <div class="col-auto">
                                            <span class="badge bg-primary-subtle text-primary fs-6 px-3 py-2">
                                                <i class="fas fa-id-card me-2"></i>
                                                <span id="matricNumber">N/A</span>
                                            </span>
                                        </div>
                                        <div class="col-auto">
                                            <span class="badge bg-success-subtle text-success fs-6 px-3 py-2">
                                                <i class="fas fa-graduation-cap me-2"></i>
                                                <span id="graduationYear">2023</span>
                                            </span>
                                        </div>
                                        <div class="col-auto">
                                            <span class="badge bg-info-subtle text-info fs-6 px-3 py-2">
                                                <i class="fas fa-building me-2"></i>
                                                <span id="departmentName">Department</span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Profile Details -->
                        <div class="p-4">
                            <div class="row g-4">
                                <!-- Personal Information -->
                                <div class="col-md-6">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-header bg-light">
                                            <h5 class="mb-0">
                                                <i class="fas fa-user-circle text-primary me-2"></i>
                                                Personal Information
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="row g-3">
                                                <div class="col-12">
                                                    <label class="small text-muted">Email Address</label>
                                                    <p id="email" class="mb-0 fw-medium">
                                                        <i class="fas fa-envelope me-2 text-muted"></i>
                                                    </p>
                                                </div>
                                                <div class="col-12">
                                                    <label class="small text-muted">Phone Number</label>
                                                    <p id="phone" class="mb-0 fw-medium">
                                                        <i class="fas fa-phone me-2 text-muted"></i>
                                                    </p>
                                                </div>
                                                <div class="col-12">
                                                    <label class="small text-muted">Gender</label>
                                                    <p id="gender" class="mb-0 fw-medium">
                                                        <i class="fas fa-venus-mars me-2 text-muted"></i>
                                                    </p>
                                                </div>
                                                <div class="col-12">
                                                    <label class="small text-muted">Highest Qualification</label>
                                                    <p id="qualification" class="mb-0 fw-medium">
                                                        <i class="fas fa-award me-2 text-muted"></i>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Employment Information -->
                                <div class="col-md-6">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-header bg-light">
                                            <h5 class="mb-0">
                                                <i class="fas fa-briefcase text-primary me-2"></i>
                                                Employment Information
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="row g-3">
                                                <div class="col-12">
                                                    <label class="small text-muted">Employment Status</label>
                                                    <p id="employmentStatus" class="mb-0 fw-medium">
                                                        <i class="fas fa-user-tie me-2 text-muted"></i>
                                                    </p>
                                                </div>
                                                <div class="col-12">
                                                    <label class="small text-muted">Current Employer</label>
                                                    <p id="employer" class="mb-0 fw-medium">
                                                        <i class="fas fa-building me-2 text-muted"></i>
                                                    </p>
                                                </div>
                                                <div class="col-12">
                                                    <label class="small text-muted">Job Title</label>
                                                    <p id="jobTitle" class="mb-0 fw-medium">
                                                        <i class="fas fa-briefcase me-2 text-muted"></i>
                                                    </p>
                                                </div>
                                                <div class="col-12">
                                                    <label class="small text-muted">Location</label>
                                                    <p id="location" class="mb-0 fw-medium">
                                                        <i class="fas fa-map-marker-alt me-2 text-muted"></i>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Skills Section -->
                                <div class="col-12">
                                    <div class="card border-0 shadow-sm">
                                        <div class="card-header bg-light">
                                            <h5 class="mb-0">
                                                <i class="fas fa-star text-primary me-2"></i>
                                                Skills & Competencies
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <div id="skillsContainer" class="d-flex flex-wrap gap-2">
                                                <!-- Skills will be dynamically inserted here -->
                                            </div>
                                            <div id="noSkills" class="text-muted text-center py-4 d-none">
                                                <i class="fas fa-info-circle fa-2x mb-3"></i>
                                                <p class="mb-0">No skills listed</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Verification Timestamp -->
                                <div class="col-12">
                                    <div class="text-center text-muted small pt-3 border-top">
                                        <i class="fas fa-shield-alt me-1"></i>
                                        Verified on: <span id="verificationDate"></span> |
                                        Profile ID: <span id="profileId" class="fw-medium"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchBtn = document.getElementById('searchBtn');
            const graduateIdInput = document.getElementById('graduateId');
            const loadingSpinner = document.getElementById('loadingSpinner');
            const errorAlert = document.getElementById('errorAlert');
            const errorMessage = document.getElementById('errorMessage');
            const graduateProfile = document.getElementById('graduateProfile');

            // Search on button click
            searchBtn.addEventListener('click', searchGraduate);

            // Search on Enter key
            graduateIdInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    searchGraduate();
                }
            });

            function searchGraduate() {
                const id = graduateIdInput.value.trim();

                if (!id) {
                    showError('Please enter a graduate Matric Number');
                    return;
                }

                // Reset UI
                graduateProfile.classList.add('d-none');
                errorAlert.classList.add('d-none');
                loadingSpinner.classList.remove('d-none');

                // Call API
                fetch(`/GraduateProfile/GetGraduate?id=${encodeURIComponent(id)}`)
                    .then(response => response.json())
                    .then(data => {
                        loadingSpinner.classList.add('d-none');

                        if (data.success) {
                            displayGraduate(data.data);
                        } else {
                            showError(data.message);
                        }
                    })
                    .catch(error => {
                        loadingSpinner.classList.add('d-none');
                        showError('Network error. Please try again.');
                        console.error('Error:', error);
                    });
            }

            function displayGraduate(graduate) {
                // Set basic info
                document.getElementById('graduateName').textContent = graduate.name || 'N/A';
                document.getElementById('matricNumber').textContent = graduate.matricNumber || 'N/A';
                document.getElementById('graduationYear').textContent = graduate.yearOfGraduation || 'N/A';
                document.getElementById('departmentName').textContent = graduate.departmentName || 'N/A';

                // Set personal info
                document.getElementById('email').innerHTML = `<i class="fas fa-envelope me-2 text-muted"></i>${graduate.email || 'N/A'}`;
                document.getElementById('phone').innerHTML = `<i class="fas fa-phone me-2 text-muted"></i>${graduate.phoneNumber || 'N/A'}`;
                document.getElementById('gender').innerHTML = `<i class="fas fa-venus-mars me-2 text-muted"></i>${graduate.gender || 'N/A'}`;
                document.getElementById('qualification').innerHTML = `<i class="fas fa-award me-2 text-muted"></i>${graduate.highestAcademicQualification || 'N/A'}`;

                // Set employment info
                document.getElementById('employmentStatus').innerHTML = `<i class="fas fa-user-tie me-2 text-muted"></i>${graduate.employmentStatus || 'N/A'}`;
                document.getElementById('employer').innerHTML = `<i class="fas fa-building me-2 text-muted"></i>${graduate.currentEmployer || 'N/A'}`;
                document.getElementById('jobTitle').innerHTML = `<i class="fas fa-briefcase me-2 text-muted"></i>${graduate.jobTitle || 'N/A'}`;
                document.getElementById('location').innerHTML = `<i class="fas fa-map-marker-alt me-2 text-muted"></i>${graduate.location || 'N/A'}`;

                // Set profile image
                const profileImage = document.getElementById('profileImage');
                if (graduate.photoUrl) {
                    profileImage.style.backgroundImage = `url('${graduate.photoUrl}')`;
                    profileImage.innerHTML = '';
                } else {
                    profileImage.style.backgroundImage = '';
                    profileImage.innerHTML = '<i class="fas fa-user fa-3x"></i>';
                }

                // Set skills
                formatAndDisplaySkills(graduate.skills);

                // Set verification info
                document.getElementById('verificationDate').textContent = new Date().toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
                document.getElementById('profileId').textContent = graduate.id || 'N/A';

                // Show profile
                graduateProfile.classList.remove('d-none');

                // Scroll to profile
                graduateProfile.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }

            function formatAndDisplaySkills(skillsProperty) {
                const container = document.getElementById('skillsContainer');
                const noSkills = document.getElementById('noSkills');

                // Clear previous content
                container.innerHTML = '';

                // Split skills by comma or treat as single skill
                const skillsArray = skillsProperty ?
                    skillsProperty.split(',').map(skill => skill.trim()).filter(skill => skill) :
                    [];

                if (skillsArray.length === 0) {
                    container.classList.add('d-none');
                    noSkills.classList.remove('d-none');
                    return;
                }

                // Create and append skill tags
                skillsArray.forEach(skill => {
                    const skillTag = document.createElement('span');
                    skillTag.className = 'badge bg-gradient px-3 py-2 text-primary';
                    skillTag.style.background = 'linear-gradient(135deg, #6a11cb 0%, #2575fc 100%)';
                    skillTag.style.color = 'white';
                    skillTag.innerHTML = `<i class="fas fa-check-circle me-2"></i>${skill}`;
                    container.appendChild(skillTag);
                });

                container.classList.remove('d-none');
                noSkills.classList.add('d-none');
            }

            function showError(message) {
                errorMessage.textContent = message;
                errorAlert.classList.remove('d-none');
                errorAlert.scrollIntoView({ behavior: 'smooth' });
            }

            // Auto-focus on input
            graduateIdInput.focus();
        });
    </script>

    <style>
        /* Custom styles */
        .card {
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-header {
            border-bottom: none;
            font-weight: 600;
        }

        .bg-gradient {
            border: none;
        }

        .badge {
            border-radius: 10px;
            font-weight: 500;
        }

        .input-group-text {
            border-radius: 10px 0 0 10px;
        }

        #searchBtn {
            border-radius: 0 10px 10px 0;
        }

        #graduateId {
            border-radius: 0;
        }

        .bg-primary-subtle {
            background-color: rgba(13, 110, 253, 0.1) !important;
        }

        .bg-success-subtle {
            background-color: rgba(25, 135, 84, 0.1) !important;
        }

        .bg-info-subtle {
            background-color: rgba(13, 202, 240, 0.1) !important;
        }

        .shadow-sm {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
        }

        #profileImage {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
    </style>
}
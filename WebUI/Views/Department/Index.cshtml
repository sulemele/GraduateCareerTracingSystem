@section Scripts {
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Global variables
        let departmentsData = [];
        let programmesData = [];
        let currentDepartmentId = null;
        let currentPage = 1;
        const itemsPerPage = 10;
        let filteredData = [];

        $(document).ready(function() {
            // Load programmes for dropdowns
            loadProgrammes();

            // Load departments on page load
            loadDepartments();

            // Event Listeners
            $('#btnAddDepartment, #btnAddFirstDepartment').click(openCreateModal);
            $('#searchDepartment').on('keyup', filterDepartments);
            $('#btnSearch').click(filterDepartments);
            $('#filterProgramme').change(filterDepartments);

            // Live preview in modal
            $('#title, #description, #programmeId').on('input change', updatePreview);

            // Form submission
            $('#departmentForm').submit(handleFormSubmit);

            // Delete confirmation
            $('#btnConfirmDelete').click(confirmDelete);

            // Edit from details modal
            $('#btnEditFromDetails').click(editFromDetails);

            // Show toast notification function
            window.showToast = function(message, type = 'success') {
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.addEventListener('mouseenter', Swal.stopTimer);
                        toast.addEventListener('mouseleave', Swal.resumeTimer);
                    }
                });

                Toast.fire({
                    icon: type,
                    title: message
                });
            };
        });

        // Load programmes for dropdown
        function loadProgrammes() {
            $.ajax({
                url: '@Url.Action("GetProgrammes", "Department")',
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        programmesData = response.data;

                        // Populate filter dropdown
                        const filterSelect = $('#filterProgramme');
                        filterSelect.empty();
                        filterSelect.append('<option value="">All Programmes</option>');

                        programmesData.forEach(programme => {
                            filterSelect.append(`<option value="${programme.id}">${programme.title}</option>`);
                        });
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Error loading programmes:', error);
                }
            });
        }

        // Load departments from server
        function loadDepartments() {
            showLoading();
            $.ajax({
                url: '@Url.Action("GetDepartments", "Department")',
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        departmentsData = response.data;
                        filteredData = [...departmentsData];
                        updateStatistics();
                        renderDepartmentsTable();
                        setupPagination();
                    } else {
                        showError('Failed to load departments: ' + response.message);
                    }
                },
                error: function(xhr, status, error) {
                    showError('Error loading departments: ' + error);
                },
                complete: function() {
                    hideLoading();
                }
            });
        }

        // Update statistics
        function updateStatistics() {
            $('#totalDepartments').text(departmentsData.length);

            // Count unique programmes
            const uniqueProgrammes = [...new Set(departmentsData.map(d => d.programmeId))];
            $('#activeProgrammes').text(uniqueProgrammes.length);

            // Calculate average departments per programme
            const avgDepartments = uniqueProgrammes.length > 0 ? (departmentsData.length / uniqueProgrammes.length).toFixed(1) : '0';
            $('#avgDepartments').text(avgDepartments);

            if (departmentsData.length > 0) {
                const latest = departmentsData[0];
                $('#latestUpdate').text(formatDate(latest.UpdatedAt));
            }
        }

        // Render departments table
        function renderDepartmentsTable() {
            const tbody = $('#departmentsTableBody');
            tbody.empty();

            if (filteredData.length === 0) {
                $('#emptyState').show();
                $('#paginationContainer').hide();
                return;
            }

            $('#emptyState').hide();
            $('#paginationContainer').show();

            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = Math.min(startIndex + itemsPerPage, filteredData.length);
            const pageData = filteredData.slice(startIndex, endIndex);

            pageData.forEach((department, index) => {
                const rowNumber = startIndex + index + 1;
                const row = `
                    <tr>
                        <td>${rowNumber}</td>
                        <td>
                            <div class="department-title" onclick="showDetails('${department.id}')">
                                ${department.title}
                            </div>
                        </td>
                        <td>
                            <span class="badge bg-info programme-badge" title="${department.programmeTitle}">
                                ${truncateText(department.programmeTitle, 20)}
                            </span>
                        </td>
                        <td>
                            <div class="description-truncate" title="${department.description}">
                                ${department.description}
                            </div>
                        </td>
                        <td>
                            <span class="badge bg-light text-dark">
                                <i class="fas fa-calendar me-1"></i>
                                ${formatDate(department.createdAt)}
                            </span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-outline-primary"
                                        onclick="showDetails('${department.id}')"
                                        title="View Details">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-success"
                                        onclick="openEditModal('${department.id}')"
                                        title="Edit Department">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger"
                                        onclick="confirmDeleteModal('${department.id}', '${department.title}')"
                                        title="Delete Department">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });

            // Update pagination info
            $('#startRecord').text(startIndex + 1);
            $('#endRecord').text(endIndex);
            $('#totalRecords').text(filteredData.length);
        }

        // Setup pagination
        function setupPagination() {
            const totalPages = Math.ceil(filteredData.length / itemsPerPage);
            const pagination = $('#pagination');
            pagination.empty();

            if (totalPages <= 1) return;

            // Previous button
            const prevDisabled = currentPage === 1 ? 'disabled' : '';
            pagination.append(`
                <li class="page-item ${prevDisabled}">
                    <a class="page-link" href="#" onclick="changePage(${currentPage - 1})">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
            `);

            // Page numbers
            for (let i = 1; i <= totalPages; i++) {
                const active = i === currentPage ? 'active' : '';
                pagination.append(`
                    <li class="page-item ${active}">
                        <a class="page-link" href="#" onclick="changePage(${i})">${i}</a>
                    </li>
                `);
            }

            // Next button
            const nextDisabled = currentPage === totalPages ? 'disabled' : '';
            pagination.append(`
                <li class="page-item ${nextDisabled}">
                    <a class="page-link" href="#" onclick="changePage(${currentPage + 1})">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            `);
        }

        // Change page
        function changePage(page) {
            currentPage = page;
            renderDepartmentsTable();
            setupPagination();
        }

        // Filter departments
        function filterDepartments() {
            const searchTerm = $('#searchDepartment').val().toLowerCase();
            const programmeFilter = $('#filterProgramme').val();

            filteredData = departmentsData.filter(department => {
                const matchesSearch = !searchTerm ||
                    department.Title.toLowerCase().includes(searchTerm) ||
                    department.Description.toLowerCase().includes(searchTerm) ||
                    department.ProgrammeTitle.toLowerCase().includes(searchTerm);

                const matchesProgramme = !programmeFilter || department.ProgrammeId === programmeFilter;

                return matchesSearch && matchesProgramme;
            });

            currentPage = 1;
            renderDepartmentsTable();
            setupPagination();
        }

        // Open create modal
        function openCreateModal() {
            $('#modalTitle').text('Add New Department');
            $('#submitText').text('Save Department');
            $('#departmentId').val('');
            $('#title').val('');
            $('#description').val('');
            $('#programmeId').val('');

            // Populate programme dropdown
            populateProgrammeDropdown();

            // Reset validation
            $('#departmentForm').removeClass('was-validated');
            $('.invalid-feedback').hide();
            $('.is-invalid').removeClass('is-invalid');

            updatePreview();

            const modal = new bootstrap.Modal(document.getElementById('departmentModal'));
            modal.show();
        }

        // Populate programme dropdown
        function populateProgrammeDropdown(selectedId = '') {
            const programmeSelect = $('#programmeId');
            programmeSelect.empty();
            programmeSelect.append('<option value="">Select a programme...</option>');

            programmesData.forEach(programme => {
                const selected = programme.id === selectedId ? 'selected' : '';
                programmeSelect.append(`<option value="${programme.id}" ${selected}>${programme.title}</option>`);
            });
        }

        // Open edit modal
        function openEditModal(id) {
            showLoading();
            $.ajax({
                url: '@Url.Action("GetDepartment", "Department")' + '/' + id,
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        const department = response.data;

                        $('#modalTitle').text('Edit Department');
                        $('#submitText').text('Update Department');
                        $('#departmentId').val(department.id);
                        $('#title').val(department.title);
                        $('#description').val(department.description);

                        // Populate programme dropdown with selected value
                        populateProgrammeDropdown(department.programmeId);

                        // Reset validation
                        $('#departmentForm').removeClass('was-validated');
                        $('.invalid-feedback').hide();
                        $('.is-invalid').removeClass('is-invalid');

                        updatePreview();

                        const modal = new bootstrap.Modal(document.getElementById('departmentModal'));
                        modal.show();
                    } else {
                        showError('Failed to load department details: ' + response.message);
                    }
                },
                error: function(xhr, status, error) {
                    showError('Error loading department: ' + error);
                },
                complete: function() {
                    hideLoading();
                }
            });
        }

        // Show details modal
        function showDetails(id) {
            showLoading();
            $.ajax({
                url: '@Url.Action("GetDepartment", "Department")' + '/' + id,
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        const department = response.data;

                        $('#detailsTitle').text(department.title);
                        $('#detailsDescription').text(department.description);
                        $('#detailsProgramme').text(department.programmeTitle);
                        $('#detailsProgrammeBadge').text(department.programmeTitle);
                        $('#detailsCreatedAt').text(formatDateTime(department.createdAt));
                        $('#detailsUpdatedAt').text(formatDateTime(department.updatedAt));

                        // Store current department ID
                        currentDepartmentId = department.id;

                        const modal = new bootstrap.Modal(document.getElementById('detailsModal'));
                        modal.show();
                    } else {
                        showError('Failed to load department details: ' + response.message);
                    }
                },
                error: function(xhr, status, error) {
                    showError('Error loading department details: ' + error);
                },
                complete: function() {
                    hideLoading();
                }
            });
        }

        // Edit from details modal
        function editFromDetails() {
            $('#detailsModal').modal('hide');
            setTimeout(() => {
                openEditModal(currentDepartmentId);
            }, 300);
        }

        // Update preview in modal
        function updatePreview() {
            const title = $('#title').val() || 'Department Title';
            const description = $('#description').val() || 'Department description will appear here...';
            const programmeId = $('#programmeId').val();
            const programme = programmesData.find(p => p.id === programmeId);
            const programmeTitle = programme ? programme.title : 'Programme';

            $('#previewTitle').text(title);
            $('#previewDescription').text(description);
            $('#previewProgramme').text(programmeTitle);
        }

        // Handle form submission
        function handleFormSubmit(e) {
            e.preventDefault();
            e.stopPropagation();

            const form = $(this)[0];
            if (!form.checkValidity()) {
                $(this).addClass('was-validated');
                return;
            }

            const departmentId = $('#departmentId').val();
            const isEdit = !!departmentId;

            const formData = {
                Title: $('#title').val(),
                Description: $('#description').val(),
                ProgrammeId: $('#programmeId').val()
            };

            // Get anti-forgery token
            const token = $('input[name="__RequestVerificationToken"]').val();

            // Show loading state
            $('#btnSubmit').prop('disabled', true);
            $('#submitSpinner').removeClass('d-none');

            // Determine endpoint and method
            const url = isEdit ? '@Url.Action("Edit", "Department")' + '/' + departmentId : '@Url.Action("Create", "Department")';
            const method = 'POST';

            $.ajax({
                url: url,
                type: method,
                contentType: 'application/json',
                headers: {
                    'RequestVerificationToken': token
                },
                data: JSON.stringify(formData),
                success: function(response) {
                    if (response.success) {
                        $('#departmentModal').modal('hide');
                        showToast(isEdit ? 'Department updated successfully!' : 'Department created successfully!');

                        // Refresh the data
                        loadDepartments();

                        // Reset form
                        $('#departmentForm')[0].reset();
                        $('#departmentForm').removeClass('was-validated');
                    } else {
                        // Handle validation errors
                        if (response.errors && response.errors.length > 0) {
                            response.errors.forEach(error => {
                                showError(error);
                            });
                        } else {
                            showError(response.message || 'Operation failed');
                        }
                    }
                },
                error: function(xhr, status, error) {
                    if (xhr.status === 400 && xhr.responseJSON) {
                        const errorData = xhr.responseJSON;
                        if (errorData.errors) {
                            // Display validation errors
                            Object.keys(errorData.errors).forEach(field => {
                                const errorMessages = errorData.errors[field];
                                errorMessages.forEach(message => {
                                    showError(`${field}: ${message}`);
                                });
                            });
                        } else {
                            showError(errorData.message || 'Validation failed');
                        }
                    } else {
                        showError('Error: ' + error);
                    }
                },
                complete: function() {
                    $('#btnSubmit').prop('disabled', false);
                    $('#submitSpinner').addClass('d-none');
                }
            });
        }

        // Confirm delete modal
        function confirmDeleteModal(id, title) {
            currentDepartmentId = id;
            $('#deleteDepartmentName').html(`You are about to delete <strong>"${title}"</strong>. This action cannot be undone.`);

            // Hide warning by default
            $('#deleteWarning').hide();
            $('#btnConfirmDelete').prop('disabled', false);

            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Confirm delete action
        function confirmDelete() {
            $('#btnConfirmDelete').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Deleting...');

            // Get anti-forgery token
            const token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: '@Url.Action("Delete", "Department")' + '/' + currentDepartmentId,
                type: 'POST',
                headers: {
                    'RequestVerificationToken': token
                },
                success: function(response) {
                    $('#deleteModal').modal('hide');

                    if (response.success) {
                        showToast('Department deleted successfully!');
                        loadDepartments();
                    } else {
                        showError(response.message || 'Failed to delete department');
                    }
                },
                error: function(xhr, status, error) {
                    showError('Error deleting department: ' + error);
                },
                complete: function() {
                    $('#btnConfirmDelete').prop('disabled', false).html('<i class="fas fa-trash me-2"></i>Delete Department');
                }
            });
        }

        // Utility functions
        function truncateText(text, maxLength) {
            if (text.length <= maxLength) return text;
            return text.substring(0, maxLength) + '...';
        }

        function formatDate(dateString) {
            if (!dateString) return 'N/A';
            try {
                const date = new Date(dateString);
                return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
            } catch {
                return dateString;
            }
        }

        function formatDateTime(dateString) {
            if (!dateString) return 'N/A';
            try {
                const date = new Date(dateString);
                return date.toLocaleString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
            } catch {
                return dateString;
            }
        }

        function showError(message) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: message,
                confirmButtonColor: '#dc3545'
            });
        }

        function showLoading() {
            $('#loadingOverlay').show();
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }
    </script>
